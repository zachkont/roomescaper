<div class="uk-grid uk-grid-width-small-1-3 uk-text-center" data-uk-grid-margin>
    <div>
        {% for i in page.header.puzzles %}
        <i class="uk-icon-puzzle-piece uk-icon-{% if i.size %}{{i.size}}{% else %}medium{% endif %}" style="color: #{{ i.color }}" title="Rating"></i>
        {% endfor %}
    </div>
    <div>
        {% if page.header.difficulty == 'easy' %}
            <i class="uk-icon-cog uk-icon-small" data-uk-tooltip="" title="Difficulty"></i>
        {% elseif page.header.difficulty == 'hard' %}
            <i class="uk-icon-cogs uk-icon-small" data-uk-tooltip="" title="Difficulty"></i>
        {% endif %}
        <em class="uk-text-large" data-uk-tooltip="" title="Difficulty">{{ page.header.difftext }}</em>
    </div>
    <div>
        <p><span class="uk-text-large" data-uk-tooltip="" title="Recommended team size">{{ page.header.team }}</span> <i class="uk-icon-group uk-icon-small" data-uk-tooltip="" title="Recommended team size"></i></p>
    </div>
</div>
