<div id="langswitcher" class="uk-text-center uk-contrast">
{% set langobj = grav['language'] %}

{% for key, language in langswitcher.languages %}

    {% if key == langswitcher.current %}
        {% set lang_url = page.url %}
        {% set active_class = 'uk-active' %}
    {% else %}
        {% set lang_url = base_url_simple ~ langobj.getLanguageURLPrefix(key)~langswitcher.page_route ?: '/' %}
        {% set active_class = '' %}
    {% endif %}

    <a href="{{ lang_url }}" class="uk-margin-left uk-margin-right {{ active_class }}">{{  language.nativeName|capitalize }}</a>

{% endfor %}
</div>
