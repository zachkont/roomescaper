<div class="uk-container uk-container-center uk-margin-large">
    <div class="uk-text-center">
         {{ content }}
    </div>
    <ul class="uk-grid uk-grid-width-medium-1-2">
        {% for panel in page.header.panels %}
        <li class="uk-panel uk-panel-space">
            <h2 class="uk-panel-title uk-text-bold"><i class="uk-text-primary uk-margin-small-right uk-icon-medium uk-icon-{{ panel.icon }}"></i> {{panel.header}}</h2>
            {{panel.text}}
        </li>
        {% endfor %}
    </ul>
</div>

<div style="background-color:#222222; color:#FFFFFF; padding:50px 0;" >
    <div class="uk-container uk-container-center">
        <div class="uk-grid uk-contrast uk-text-justify">
          <div class="uk-width-1-1 uk-text-center uk-h1">{{ page.header.ratings.header }}</div>
          <div class="uk-width-1-1 uk-width-medium-1-3 uk-panel uk-panel-space">{{ page.header.ratings.text1 }}</div>
          <div class="uk-width-1-1 uk-width-medium-1-3 uk-panel uk-panel-space">{{ page.header.ratings.text2 }}</div>
          <div class="uk-width-1-1 uk-width-medium-1-3 uk-panel uk-panel-space">{{ page.header.ratings.text3 }} <i class="uk-icon-cog uk-icon-small"></i> {{ page.header.ratings.text4 }} <i class="uk-icon-cogs uk-icon-small"></i>  {{ page.header.ratings.text5 }}</div>
        </div>
    </div>
</div>
